<!DOCTYPE html>
<html>
<head>

    <title>Document</title>
</head>
<body>
    <form action="/pokemon/<%= pokemon.id %>/edit" method="POST">

  <!-- Name -->
  <label>Name:</label>
  <input type="text" name="name" value="<%= pokemon.name %>" required>

  <!-- Trainer -->
  <label>Trainer:</label>
  <select name="trainer_id" required>
    <% trainers.forEach(tr => { %>
      <option value="<%= tr.id %>"
        <%= tr.name === pokemon.trainer_name ? "selected" : "" %>>
        <%= tr.name %>
      </option>
    <% }) %>
  </select>

  <!-- Types -->
  <label>Types:</label>
  <select name="type_ids" multiple required>
    <% types.forEach(t => { %>
      <option value="<%= t.id %>"
        <%= pokemon.types.includes(t.name) ? "selected" : "" %>>
        <%= t.name %>
      </option>
    <% }) %>
  </select>

  <button type="submit">Update Pok√©mon</button>
    </form>
    
</body>
</html>


